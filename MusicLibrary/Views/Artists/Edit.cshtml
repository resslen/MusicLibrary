@using MusicLibrary.Helpers
@model MusicLibrary.Models.ArtistViewModel
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col s12">
            <div class="row">
                <div class="input-field col s12">
                    <input id="name" name="name" type="text" value="@Model.Name" />
                    <label for="name">Name</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="lastFmUrl" name="lastFmUrl" type="text" value="@Model.LastFmUrl" />
                    <label for="lastFmUrl">Last.fm link</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <textarea id="description" name="description" class="materialize-textarea">@Model.Description</textarea>
                    <label for="description">Description</label>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("SubmitBar", Model)
}
