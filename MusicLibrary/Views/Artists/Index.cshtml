@using MusicLibrary.Helpers
@model IEnumerable<MusicLibrary.Models.ArtistListViewModel>
<div class="card">
    <div class="card-content">
        @Html.ActionButton("Add new", "Add")
    </div>
</div>
<table class="striped responsive-table">
    <tr>
        <th>Name</th>
        <th>Number of albums</th>
        <th>Details</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (var artist in Model)
    {
        <tr>
            <td title="@artist.Description">@artist.Name</td>
            <td>@artist.AlbumCount</td>
            <td>@Html.ActionLink("Details", "Details", new { Id = artist.Id })</td>
            <td>@Html.ActionLink("Edit", "Edit", new { Id = artist.Id })</td>
            <td>@Html.ActionLink("Delete", "Delete", new { Id = artist.Id })</td>
        </tr>
    }
</table>