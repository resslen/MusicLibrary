@model MusicLibrary.DAL.Tag
@using MusicLibrary.Helpers
<h1>Albums</h1>
<table class="striped responsive-table">
    <tr>
        <th>Title</th>
        <th>Artist</th>
        <th>Year</th>
        <th>Details</th>
    </tr>
    @foreach (var album in Model.Albums)
    {
        <tr>
            <td>@album.Title</td>
            <td>@album.Author.Name</td>
            <td>@album.Year</td>
            <td><a>@Html.ActionButton("Details", "Details", "Albums", new { Id = album.Id })</a></td>
        </tr>
    }
</table>