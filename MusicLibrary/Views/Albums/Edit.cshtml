@using MusicLibrary.Helpers
@model MusicLibrary.Models.EditAlbumViewModel
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col s12">
            <div class="row">
                <div class="input-field col s12">
                    @Html.TextBox("title", Model.Album.Title)
                    <label for="title">Title</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    @Html.DropDownListFor(x => x.AuthorId, new SelectList(Model.Artists, "Id", "Name"))
                    <label for="AuthorId">Artist</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    @Html.TextBox("year", Model.Album.Year)
                    <label for="year">Year</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    @Html.TextBox("lastFmUrl", Model.Album.LastFmUrl)
                    <label for="lastFmUrl">Last.fm link</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    @Html.TextBox("tags", Html.ListTags(Model.Album.Tags))
                    <label for="tags">Tags</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <textarea id="tracklist" name="tracklist" class="materialize-textarea">@Model.Album.Tracklist</textarea>
                    <label for="tracklist">Tracklist</label>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("SubmitBar", Model)
}
