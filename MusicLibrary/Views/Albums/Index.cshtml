@using MusicLibrary.Helpers
@model IEnumerable<MusicLibrary.Models.AlbumListViewModel>
@Html.Partial("IndexBar")
<table class="responsive-table striped">
    <tr>
        <th>Title @Html.SortButtons("title")</th>
        <th>Author @Html.SortButtons("artist")</th>
        <th>Year @Html.SortButtons("year")</th>
        <th>Details</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (var album in Model)
    {
        <tr>
            <td>@album.Title</td>
            <td>@Html.ActionLink(album.Author, "Details", "Artists", new { Id = album.AuthorId }, null)</td>
            <td>@album.Year</td>
            <td>@Html.ActionButton("Details", "Details", new { Id = album.Id })</td>
            <td>@Html.ActionButton("Edit", "Edit", new { Id = album.Id })</td>
            <td>@Html.ActionButton("Delete", "Delete", new {Id = album.Id})</td>
        </tr>
    }
</table>